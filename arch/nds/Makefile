#---------------------------------------------------------------------------------
.SUFFIXES:
#---------------------------------------------------------------------------------

include $(DEVKITARM)/ds_rules

export TOPDIR		:=	$(CURDIR)


.PHONY: ${TARGET}.arm7

#---------------------------------------------------------------------------------
# main targets
#---------------------------------------------------------------------------------
all: ${TARGET}.arm7

${TARGET}.arm7	: arm7/${TARGET}.elf

#---------------------------------------------------------------------------------
arm7/${TARGET}.elf:
	$(MAKE) -C arm7
	
#---------------------------------------------------------------------------------
clean:
	$(MAKE) -C arm7 clean
	rm -f ${TARGET}.arm7
