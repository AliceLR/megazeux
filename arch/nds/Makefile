#---------------------------------------------------------------------------------
.SUFFIXES:
#---------------------------------------------------------------------------------

include $(DEVKITARM)/ds_rules

export TOPDIR		:=	$(CURDIR)


.PHONY: ${TARGET}.elf

#---------------------------------------------------------------------------------
# main targets
#---------------------------------------------------------------------------------
all: ${TARGET}.elf

#---------------------------------------------------------------------------------
${TARGET}.elf:
	$(MAKE) -C arm7
	
#---------------------------------------------------------------------------------
clean:
	$(MAKE) -C arm7 clean
	rm -f ${TARGET}.arm7
