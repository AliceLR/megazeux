joy[5,8]button4 = act_y
joy[5,8]button5 = act_ltrigger
joy[5,8]button6 = act_rtrigger
joy[5,8]button7 = act_lshoulder
joy[5,8]button8 = act_left
joy[5,8]button9 = act_right
joy[5,8]button10 = act_up
joy[5,8]button11 = act_down
joy[5,8]button12 = act_start
joy[5,8].axis_lx = 1
