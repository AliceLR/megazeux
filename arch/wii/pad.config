joy1button46 = act_menu

# Guitar Hero 3
# This control scheme ignores the Wii remote inputs by default.
joy1axis7 = act_l_left, act_l_right
joy1axis8 = act_l_up, act_l_down
joy1axis9 = 0, act_settings
joy1button57 = act_shoot
joy1button58 = act_bomb
joy1button59 = act_switch
joy1button60 = act_x
joy1button61 = act_y
