joy1button19 = act_y
joy1button20 = act_menu
joy1button21 = act_switch
joy1button22 = act_bomb

# Classic
# This control scheme ignores the Wii remote inputs by default.
joy1axis3 = act_l_left, act_l_right
joy1axis4 = act_l_up, act_l_down
joy1axis5 = act_r_left, act_r_right
joy1axis6 = act_r_up, act_r_down
joy1button33 = act_shoot
joy1button34 = act_bomb
joy1button35 = act_x
joy1button36 = act_y
joy1button37 = act_save
joy1button38 = act_load
